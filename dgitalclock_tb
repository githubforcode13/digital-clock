module clock_tb();

    
    reg Clk_1sec;
    reg reset;

    
    wire [5:0] seconds;
    wire [5:0] minutes;
    wire [4:0] hours;

    
    Digital_Clock uut (
        .Clk_1sec(Clk_1sec), 
        .reset(reset), 
        .seconds(seconds), 
        .minutes(minutes), 
        .hours(hours)
    );
    
    initial Clk_1sec = 0;
    always #50000000 Clk_1sec = ~Clk_1sec;  

    initial begin
        reset = 1;
        #100;
        reset = 0;  
    end
      
endmodule
